{
  "name": "marlin",
  "displayName": "marlin",
  "description": "3D printing G-code Marlin support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./extension",
  "hoverProvider": [
    {
      "language": "marlin",
      "scheme": "file",
      "pattern": "**/*.gcode",
      "documentSelector": [
        "marlin"
      ],
      "provideHover": {
        "myAPIElement": {
          "markdown": "This is documentation for my API element."
        }
      }
    }
  ],
  "contributes": {
    "commands": [
      {
        "command": "marlin.showToolpath",
        "title": "Show Toolpath"
      }
    ],
    "keybindings": [
      {
        "command": "marlin.showToolpath",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "editorTextFocus"
      },
      {
        "command": "marlin.connect",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "marlin.sendCommand",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus"
      },
      {
        "command": "marlin.showNodes",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus"
      },
      {
        "command": "marlin.showFlutter",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "marlin",
        "aliases": [
          "Marlin",
          ".gcode .g",
          "gcode",
          "g",
          "3D printing"
        ],
        "extensions": [
          ".gcode"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "marlin",
        "path": "/snippets/snippets.json"
      }
    ],
    "grammars": [
      {
        "language": "marlin",
        "scopeName": "source.gcode",
        "path": "./syntaxes/.gcode.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "editor.insertSpaces": false,
      "editor.snippetSuggestions": "top",
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "name": "Rapid",
            "scope": "keyword.control.rapid",
            "settings": {
              "foreground": "#ff4e4e",
              "fontStyle": "bold"
            }
          },
          {
            "name": "Xposition",
            "scope": "keyword.control.positionX",
            "settings": {
              "foreground": "#ff8888c2",
              "fontStyle": "bold"
            }
          },
          {
            "name": "Ypoosition",
            "scope": "keyword.control.positionY",
            "settings": {
              "foreground": "#77f18b",
              "fontStyle": "bold"
            }
          },
          {
            "name": "Zpoosition",
            "scope": "keyword.control.positionZ",
            "settings": {
              "foreground": "#76eaff",
              "fontStyle": "bold"
            }
          },
          {
            "name": "Linear",
            "scope": "keyword.control.positioning.linear",
            "settings": {
              "foreground": "#ffed48",
              "fontStyle": "bold"
            }
          },
          {
            "name": "Circlular",
            "scope": "keyword.control.positioning.circular",
            "settings": {
              "foreground": "#ff60bd",
              "fontStyle": "bold"
            }
          },
          {
            "name": "Mcodes",
            "scope": "keyword.control.mcodes",
            "settings": {
              "foreground": "#ffa640",
              "fontStyle": "bold"
            }
          },
          {
            "name": "Scodes",
            "scope": "keyword.control.scodes",
            "settings": {
              "foreground": "#f07eff",
              "fontStyle": "bold"
            }
          },
          {
            "name": "Fcodes",
            "scope": "keyword.control.fcodes",
            "settings": {
              "foreground": "#a8c4ff",
              "fontStyle": "bold"
            }
          },
          {
            "name": "Ecodes",
            "scope": "keyword.control.ecodes",
            "settings": {
              "foreground": "#ceafff",
              "fontStyle": "bold"
            }
          },
          {
            "name": "Gcodes",
            "scope": "keyword.control.gcodes",
            "settings": {
              "foreground": "#5bb0ff",
              "fontStyle": "bold"
            }
          }
        ]
      }
    }
  },
  "dependencies": {
    "axios": "^1.3.4",
    "cheerio": "^1.0.0-rc.12",
    "markdown-it": "^13.0.1",
    "serialport": "^10.5.0",
    "three": "^0.150.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
